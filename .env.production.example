# Production Environment Configuration
# ⚠️ NEVER commit this file to git - it contains secrets
# Add to .gitignore: .env.production

# Node Environment
NODE_ENV=production

# Server Ports
FRONTEND_PORT=3000

# Database Configuration
DB_USER=masonic_user
DB_PASSWORD=your-strong-database-password-here
DB_HOST=postgres
DB_PORT=5432
DB_NAME=gestao_loja_maconica

# Redis Configuration
REDIS_PASSWORD=your-strong-redis-password-here
REDIS_PORT=6379

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_SECRET=your-strong-jwt-secret-here-min-32-chars
REFRESH_TOKEN_SECRET=your-strong-refresh-secret-here-min-32-chars

# Docker Hub (for image pulling)
DOCKER_USERNAME=your-docker-hub-username

# SMTP Configuration (Email)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key-here

# External APIs - Evolution (WhatsApp)
EVOLUTION_API_URL=https://api.evolution.ai
EVOLUTION_API_KEY=your-evolution-api-key-here

# External APIs - OneSignal (Push Notifications)
ONESIGNAL_APP_ID=your-onesignal-app-id-here
ONESIGNAL_REST_KEY=your-onesignal-rest-key-here

# Optional: OpenSign Configuration
OPENSIGN_API_URL=https://api.opensign.com
OPENSIGN_API_KEY=your-opensign-api-key-here

# Logging
LOG_LEVEL=info

# Security
CORS_ORIGIN=https://your-domain.com
SECURE_COOKIES=true

# Analytics (Optional)
SENTRY_DSN=your-sentry-dsn-here

# Feature Flags (Optional)
ENABLE_NOTIFICATIONS=true
ENABLE_AUDIT_LOG=true
ENABLE_BACKUPS=true
